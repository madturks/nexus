// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	"remoteEnv": {
        "PATH": "${containerEnv:PATH}:/opt/pip/bin",
		"PKG_CONFIG_PATH": "/opt/conan-pkg-root"
    },
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {},
		"ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
		"ghcr.io/deep-space-cartel/devcontainers-features/apt:1": {
			"packages": "cmake gcc-14 g++-14 llvm-18 lld-18 clang-18 libclang-rt-18-dev libc++-18-dev libc++abi-18-dev libunwind-18-dev clang-format-18 clang-tidy-18 clangd-18 gdb ninja-build nano vim git-extras git-lfs pkg-config libxdp-dev libnl-route-3-200"
		},
		"ghcr.io/deep-space-cartel/devcontainers-features/pip:1": {
			"packages": "meson conan>=2",
			"location": "/opt/pip/"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo bash -c /workspaces/nexus/.devcontainer/post-create.sh",
	// Wait until postCreateCommand finishes.
	"waitFor": "postCreateCommand",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"xaver.clang-format",
				"grimmer.vscode-back-forward-button",
				"disroop.conan",
				"Guyutongxue.cpp-reference",
				"eamodio.gitlens",
				"yzhang.markdown-all-in-one",
				"shd101wyy.markdown-preview-enhanced",
				"mesonbuild.mesonbuild",
				"shyykoserhiy.vscode-spotify",
				"tonybaloney.vscode-pets",
				"redhat.vscode-yaml",
				"cschlosser.doxdocgen"
			],
			"settings": {
                "terminal.integrated.profiles.linux": {
                    "default-zsh": {
                        "path": "/usr/bin/zsh",
                        "args": [
                            "--login"
                        ]
                    }
                },
                "terminal.integrated.defaultProfile.linux": "default-zsh"
            }
		}
	}
}
