{
    "mesonbuild.configureOnOpen": false,
    "mesonbuild.buildFolder": "tgt",
    "mesonbuild.configureOptions": [
        "--wipe",
        "--native-file=.config/meson-clang",
        "--buildtype=debug"
    ],
    "mesonbuild.formatting.enabled": true,
    "mesonbuild.linting.enabled": true,
    "clangd.path": "clangd-18",
    "clangd.enableCodeCompletion": true,
    "clangd.arguments": [
        "-pretty",
        "--background-index",
        "--compile-commands-dir=tgt",
        "-header-insertion=never"
    ],
    "clangd.inactiveRegions.useBackgroundHighlight": true,
    "clangd.checkUpdates": false,
    "clangd.detectExtensionConflicts": true,
    "search.useIgnoreFiles": true,
    "search.exclude": {
        "tgt/**": true,
        "vendor/**": true,
        ".gdbinit": true,
        ".clang-*": true
    },
    "C_Cpp.default.compileCommands": "/workspace/madturks/nexus/tgt/compile_commands.json",
    "C_Cpp.default.configurationProvider": "mesonbuild.mesonbuild",
    "terminal.integrated.scrollback": 100000,
    "debug.terminal.clearBeforeReusing": true,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.stickyScroll.enabled": true
}