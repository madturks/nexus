{
    "mesonbuild.configureOnOpen": false,
    "mesonbuild.buildFolder": "tgt",
    "mesonbuild.configureOptions": [
        "--wipe",
        "--native-file=.config/meson-clang",
        "--buildtype=debug"
    ],
    "mesonbuild.formatting.enabled": true,
    "mesonbuild.linting.enabled": true,
    "clangd.path": "clangd-18",
    "clangd.enableCodeCompletion": true,
    "clangd.arguments": [
        "-pretty",
        "--background-index",
        "--compile-commands-dir=tgt",
        "-header-insertion=never"
    ],
    "clangd.inactiveRegions.useBackgroundHighlight": true,
    "clangd.checkUpdates": false,
    "clangd.detectExtensionConflicts": true,
    "search.useIgnoreFiles": true,
    "search.exclude": {
        "tgt/**": true,
        "vendor/**": true,
        ".gdbinit": true,
        ".clang-*": true
    },
    "C_Cpp.default.compileCommands": "/workspace/madturks/nexus/tgt/compile_commands.json",
    "C_Cpp.default.configurationProvider": "mesonbuild.mesonbuild",
    "terminal.integrated.scrollback": 100000,
    "debug.terminal.clearBeforeReusing": true,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.stickyScroll.enabled": true,
    "doxdocgen.generic.includeTypeAtReturn": false,
    "doxdocgen.file.copyrightTag": [
        "Copyright (c) {year} The Madturks Organization",
        "SPDX-License-Identifier: GPL-3.0-or-later"
    ],
    "doxdocgen.file.fileOrder": [
        "brief",
        "copyright",
    ],
    "doxdocgen.generic.order": [
        "empty",
        "brief",
        "empty",
        "tparam",
        "param",
        "return",
        "custom"
    ],
    "doxdocgen.generic.briefTemplate": "{text}",
    "doxdocgen.c.firstLine": "/******************************************************",
    "doxdocgen.c.lastLine": "******************************************************/",
    "editor.fontFamily": "'Ubuntu Mono', 'monospace', monospace"
    
}